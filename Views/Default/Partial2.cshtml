@using TravelTripProject.Models.Sınıflar
@model List<Blog>

@foreach (var x in Model)
{
    @*@{ var tarih = x.Tarih.HasValue ? x.Tarih.Value.ToString("dd.MM.yyyy") : "";}*@
    <div class="right">
        <div class="bot-left">
            <img src="@x.BlogImage" style="width:300px;height:150px"; alt="resim" />
        </div>
        <div class="left-text">
            <h4>@x.Baslik</h4>
            <span class="doller">@x.Tarih.Value.ToString("dd.MM.yyyy")</span>
            <p>@x.Aciklama.Substring(0, 5)</p>
            <p>
                <a href="/Blog/BlogDetay/@x.ID">
                    <span class="read">Devamını Oku...</span>
                </a>
            </p>
        </div>
    </div>
}